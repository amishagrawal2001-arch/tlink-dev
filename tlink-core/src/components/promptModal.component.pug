.modal-header
    h5.modal-title {{ prompt || 'Enter value' }}
    button.btn.btn-sm.btn-link.p-0(
        type='button',
        (click)='cancel()',
        aria-label='Close',
        style='width: 24px; height: 24px; display: flex; align-items: center; justify-content: center;'
    )
        i.fas.fa-times
.modal-body
    .input-group(*ngIf='secondaryPrompt')
        input.form-control(
            [type]='showSecondaryPassword ? "text" : (secondaryPassword ? "password" : "text")',
            [(ngModel)]='secondaryValue',
            #secondaryInput,
            [placeholder]='secondaryPlaceholder || secondaryPrompt',
            (keyup.enter)='ok()',
            (keyup.esc)='cancel()',
        )
        button.btn.btn-outline-secondary(
            *ngIf='secondaryPassword',
            type='button',
            (click)='showSecondaryPassword = !showSecondaryPassword',
            [attr.aria-label]='showSecondaryPassword ? "Hide password" : "Show password"',
        )
            i.fas([class.fa-eye]='!showSecondaryPassword', [class.fa-eye-slash]='showSecondaryPassword')
    .input-group([class.mt-3]='secondaryPrompt')
        input.form-control(
            [type]='showPassword ? "text" : (password ? "password" : "text")',
            autofocus,
            [(ngModel)]='value',
            #primaryInput,
            [placeholder]='prompt',
            (keyup.enter)='ok()',
            (keyup.esc)='cancel()',
        )
        button.btn.btn-outline-secondary(
            *ngIf='password',
            type='button',
            (click)='showPassword = !showPassword',
            [attr.aria-label]='showPassword ? "Hide password" : "Show password"',
        )
            i.fas([class.fa-eye]='!showPassword', [class.fa-eye-slash]='showPassword')
    .d-flex.align-items-center.mt-3.pt-2.checkbox-footer
        checkbox.checkbox-wrapper(
            *ngIf='showRememberCheckbox',
            [(ngModel)]='remember',
            text='Remember'
        )
        button.btn.btn-primary(
            (click)='ok()',
        ) OK
